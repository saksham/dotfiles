#!/bin/sh
set -x

brew update && brew upgrade
brew install gh tmuxinator zsh-syntax-highlighting jq bat jenv openssl pyenv pyenv-virtualenv nvm direnv git-flow diff-so-fancy romkatv/powerlevel10k/powerlevel10k


# Set the default shell to zsh if it isn't currently set to zsh
if [[ ! "$SHELL" == "$(command -v zsh)" ]]; then
    chsh -s "$(command -v zsh)"
fi
# Clone Oh My Zsh if it isn't already present
if [[ ! -d $HOME/.oh-my-zsh/ ]]; then
    git clone --depth=1 https://github.com/robbyrussell/oh-my-zsh.git "$HOME/.oh-my-zsh"
fi

# Initialize plugins directory
if [[ ! -d $HOME/.oh-my-zsh/custom/plugins ]]; then
    mkdir $HOME/.oh-my-zsh/custom/plugins
fi

# Clone zsh-nvm if not done already
if [[ ! -d $HOME/.oh-my-zsh/custom/plugins/zsh-nvm ]]; then
    git clone git@github.com:lukechilds/zsh-nvm.git "$HOME/.oh-my-zsh/custom/plugins/zsh-nvm"
else
    # Pull any updates
    git -C "$HOME/.oh-my-zsh/custom/plugins/zsh-nvm" pull --quiet
fi
