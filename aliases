# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias tree="tree -a"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Tools
alias mux=tmuxinator

# Python
alias ipy="python -c 'import IPython;IPython.terminal.ipapp.launch_new_instance()'"

# AWS
alias assumeRole="aws-mfa --profile $AWS_PROFILE_NAME --device $AWS_MFA_DEVICE_ID --duration $AWS_TOKEN_VALID_DURATION --assume-role $AWS_ASSUMED_ROLE --role-session-name ASSUMED_AWS_SESSION"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
